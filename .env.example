# Copy this file to `.env` (DO NOT commit `.env`).

# Client (Firebase Web config)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_APP_ID=
# Optional
# VITE_FIREBASE_AUTH_DOMAIN=
# VITE_FIREBASE_STORAGE_BUCKET=

# Server (Firebase Admin)
# Preferred: set to a file path in production.
# FIREBASE_SERVICE_ACCOUNT=/absolute/path/to/service-account.json
# Or a single-line JSON string (avoid multi-line in .env):
# FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"...","client_id":"..."}'

# Database
# Use pooled URL when available (Neon/Supabase pooler). Keep DATABASE_URL aligned for tools.
DATABASE_URL_POOLER=
DATABASE_URL=
